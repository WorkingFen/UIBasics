<UserControl x:Class="WindowsPresentationFoundation.Control.ChangeCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsPresentationFoundation.Control"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="270">
    <Grid>
        <TextBox Name="CategoryText" Height="23" Width="110" VerticalAlignment="Center" HorizontalAlignment="Left" IsEnabled="False"/>
        <Image Name="CategoryPicture" Height="45" Width="150" HorizontalAlignment="Right" MouseLeftButtonDown="Switch"/>
    </Grid>
</UserControl>
